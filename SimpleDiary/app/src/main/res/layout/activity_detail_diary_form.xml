<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.tmon.hunjin.simpledairy.diary.DetailDiaryFormActivity">


    <EditText
        android:id="@+id/edt_diary_contents"
        android:background="@drawable/rounded_box"
        android:gravity="top"
        android:layout_width="392dp"
        android:layout_height="494dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:padding="@dimen/title_margin"
        app:layout_constraintBottom_toTopOf="@+id/txt_diary_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_diary_title"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHorizontal_bias="0.55"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="58dp" />

    <TextView
        android:id="@+id/txt_diary_date"
        android:layout_width="398dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorGray"
        android:enabled="false"
        android:gravity="right|center_vertical"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="-8dp"
        app:layout_constraintHorizontal_bias="0.518" />

    <EditText
        android:id="@+id/edt_diary_title"
        android:layout_width="394dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGray"
        android:enabled="false"
        android:paddingLeft="@dimen/title_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-4dp"
        app:layout_constraintHorizontal_bias="0.518" />
</android.support.constraint.ConstraintLayout>


